# Vikunja MCP Server Configuration

# Vikunja API Configuration
VIKUNJA_API_URL=http://localhost:3456

# MCP Server Configuration
MCP_PORT=3457
NODE_ENV=development

# Transport Configuration
# Transport type: 'stdio' (default, for subprocess) or 'http' (for remote clients)
TRANSPORT_TYPE=stdio
# MCP_PORT is required when TRANSPORT_TYPE=http (ports: 3010 blue, 3011 green in production)

# CORS Configuration (optional, for HTTP transport)
CORS_ENABLED=false
CORS_ALLOWED_ORIGINS=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_BURST=120
RATE_LIMIT_ADMIN_BYPASS=false

# LLM Configuration (optional - for natural language task parsing)
LLM_PROVIDER=anthropic
LLM_API_KEY=
LLM_ENDPOINT=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
