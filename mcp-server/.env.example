# Vikunja MCP Server Configuration

# Vikunja API Configuration
VIKUNJA_API_URL=http://localhost:3456

# MCP Server Configuration
MCP_PORT=3457
NODE_ENV=development

# HTTP Transport Configuration
MCP_HTTP_ENABLED=false
MCP_HTTP_PORT=3458
MCP_HTTP_HOST=0.0.0.0

# Redis Configuration
# Option 1: Use individual connection parameters
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Option 2: Use connection URL (overrides REDIS_HOST/PORT/PASSWORD if set)
# REDIS_URL=redis://localhost:6379

# Authentication Configuration (HTTP Transport)
AUTH_TOKEN_CACHE_TTL=300
AUTH_TOKEN_CACHE_ENABLED=true

# Rate Limiting Configuration
# Legacy settings (used by existing stdio rate limiter)
